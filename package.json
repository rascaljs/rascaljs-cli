{
  "name": "@rascaljs/cli",
  "version": "0.2.0",
  "description": "RascalCoder's command lint tools",
  "author": {
    "name": "RascalCoder",
    "email": "meno.qiqio@gmail.com",
    "url": "https://github.com/honghuangdc"
  },
  "license": "MIT",
  "homepage": "https://github.com/rascaljs/rascaljs-cli",
  "repository": {
    "url": "https://github.com/rascaljs/rascaljs-cli.git"
  },
  "bugs": {
    "url": "https://github.com/rascaljs/rascaljs-cli/issues"
  },
  "bin": {
    "rascal": "bin/index.mjs",
    "ras": "bin/index.mjs"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint . --fix",
    "format": "ras prettier-format",
    "commit": "ras git-commit",
    "cleanup": "ras cleanup",
    "git-hooks": "ras init-git-hooks",
    "update-pkg": "ras update-pkg",
    "update-version": "bumpp package.json",
    "publish-pkg": "pnpm -r publish --access public",
    "release": "pnpm update-version && pnpm publish-pkg"
  },
  "dependencies": {
    "commander": "^10.0.1",
    "execa": "7.1.1",
    "kolorist": "^1.7.0",
    "minimist": "^1.2.8",
    "npm-check-updates": "^16.10.9",
    "prompts": "^2.4.2",
    "rimraf": "^5.0.0"
  },
  "devDependencies": {
    "@rascaljs/cli": "link:",
    "@types/prompts": "^2.4.4",
    "bumpp": "^9.1.0",
    "eslint": "^8.39.0",
    "eslint-config-rascal": "0.1.0",
    "lint-staged": "^13.2.1",
    "simple-git-hooks": "^2.8.1",
    "tsup": "^6.5.0",
    "tsx": "^3.12.6",
    "typescript": "^5.0.4",
    "zx": "^7.1.1"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm rascal git-commit-verify",
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*.{js,jsx,mjs,cjs,json,ts,tsx,mts,cts,vue}": [
      "eslint . --fix"
    ]
  }
}
