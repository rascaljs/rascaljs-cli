{
  "name": "@rascaljs/cli",
  "version": "0.2.7",
  "description": "RascalCoder's command lint tools",
  "author": {
    "name": "RascalCoder",
    "email": "meno.qiqio@gmail.com",
    "url": "https://github.com/honghuangdc"
  },
  "license": "MIT",
  "homepage": "https://github.com/rascaljs/rascaljs-cli",
  "repository": {
    "url": "https://github.com/rascaljs/rascaljs-cli.git"
  },
  "bugs": {
    "url": "https://github.com/rascaljs/rascaljs-cli/issues"
  },
  "bin": {
    "rascal": "bin/index.mjs",
    "ras": "bin/index.mjs"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint . --fix",
    "format": "ras prettier-format",
    "commit": "ras git-commit",
    "cleanup": "ras cleanup",
    "update-pkg": "ras update-pkg",
    "release": "ras release",
    "publish-pkg": "pnpm -r publish --access public && pnpm release"
  },
  "dependencies": {
    "changelogen": "0.5.3",
    "commander": "10.0.1",
    "enquirer": "2.3.6",
    "execa": "7.1.1",
    "kolorist": "1.8.0",
    "minimist": "1.2.8",
    "npm-check-updates": "16.10.12",
    "rimraf": "5.0.1"
  },
  "devDependencies": {
    "@rascaljs/cli": "link:",
    "@types/node": "^20.2.3",
    "bumpp": "^9.1.0",
    "eslint": "8.41.0",
    "eslint-config-rascal": "0.1.0",
    "lint-staged": "13.2.2",
    "simple-git-hooks": "2.8.1",
    "tsup": "6.7.0",
    "tsx": "3.12.7",
    "typescript": "5.0.4"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm ras git-commit-verify",
    "pre-commit": "pnpm  lint-staged"
  },
  "lint-staged": {
    "*.{js,json,ts}": [
      "eslint . --fix"
    ]
  }
}
